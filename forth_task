import random
import vk_api
from vk_api.bot_longpoll import VkBotLongPoll, VkBotEventType



def main():
    vk_session = vk_api.VkApi(
        token=TOKEN)

    longpoll = VkBotLongPoll(vk_session, group_id)

    for event in longpoll.listen():

        if event.type == VkBotEventType.MESSAGE_NEW:
            print(event)
            print('Новое сообщение:')
            sender = event.obj.message['from_id']
            print('Для меня от:', sender)
            print('Текст:', event.obj.message['text'])
            vk = vk_session.get_api()
            response = vk.users.get(user_ids=sender, fields="first_name,city")[0]
            print(response)
            if 'city' in response and response['city']:
                city = response['city']['title']
            else:
                city = None

            if city:
                vk.messages.send(user_id=sender,
                                 message=f"Привет, {response['first_name']}!\nКак поживает {city}?",
                                 random_id=random.randint(0, 2 ** 64))
            else:
                vk.messages.send(user_id=sender,
                                 message=f"Привет, {response['first_name']}!",
                                 random_id=random.randint(0, 2 ** 64))


if __name__ == '__main__':
    main()
